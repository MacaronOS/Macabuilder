Build:
    Type: StaticLib

    Src:
        *.cpp, **/*.cpp
        *.{platform}.cxx, *.{platform}.s, **/*.{platform}.cxx, **/*.{platform}.s

    Extensions:
        cpp:
            Compiler: g++
            Flags: -std=c++17

        cxx:
            Compiler: g++
            Flags: -std=c++17

    Archiver: ar
